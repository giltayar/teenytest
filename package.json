{
  "name": "teenytest",
  "version": "5.2.1",
  "description": "A teeny tiny test runner",
  "main": "index.js",
  "bin": "bin/teenytest",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/testdouble/teenytest.git"
  },
  "scripts": {
    "style": "standard --fix",
    "test": "npm run test:unit && npm run test:safe && npm run test:example && npm run style",
    "test:unit": "cd unit && npm install && npm test",
    "test:safe": "./safe/support/runner.js",
    "test:example": "bats --tap safe",
    "test:bats": "bats --tap --recursive bats"
  },
  "keywords": [
    "teeny",
    "tiny",
    "testing",
    "tap",
    "tap13"
  ],
  "author": "Justin Searls <searls@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/testdouble/teenytest/issues"
  },
  "homepage": "https://github.com/testdouble/teenytest#readme",
  "dependencies": {
    "async": "^2.6.2",
    "function-names-at-line": "^1.0.0",
    "glob": "^7.1.3",
    "lodash": "^4.17.11",
    "lodash-deeper": "^1.0.0",
    "minimist": "^1.2.0",
    "resolve": "^1.10.0"
  },
  "devDependencies": {
    "bats": "^1.1.0",
    "core-assert": "^1.0.0",
    "standard": "^12.0.1"
  },
  "standard": {
    "ignore": [
      "/unit/node_modules"
    ],
    "global": [
      "assert"
    ]
  }
}
